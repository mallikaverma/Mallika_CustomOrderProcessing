<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="custom_order_processing" translate="label" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Custom Order Processing</label>
            <tab>sales</tab>
            <resource>Mallika_CustomOrderProcessing::config</resource>

            <group id="rate_limit" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Rate Limiting</label>

                <field id="max_requests" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max Requests per Minute</label>
                    <validate>validate-digits</validate>
                </field>

                <field id="enabled" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Rate Limiting</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
